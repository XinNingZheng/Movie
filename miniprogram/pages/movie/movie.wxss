.movie{
  display: flex;
  padding: 10px;
  height: 300rpx;
  border-bottom: 1px solid #ccc;
}

.movie-img{
  width: 200rpx;
  height: 100%;
  margin-right: 20rpx;
}

.movie-info{
  flex: 1;
	font-size: 28rpx;
	line-height: 1.8;
}

.movie-title{
  color: #666;
  font-size: 40rpx;
  font-weight: bolder;
  width: 500rpx;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
}
.movie-actor{
  width: 500rpx;
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
}
.movie-score{
  color: #faaf00;
}

.movie-comment{
  height: 60rpx;
  background: #E54847;
  color: #fff;
  font-size: 26rpx;
  margin-top: 10rpx;
}

